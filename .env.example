# Database Configuration
# PostgreSQL database URL (required for production)
# Example: postgresql://user:password@host:port/database
DATABASE_URL=

# API Keys for External Services
# BMRS API Key from Elexon (https://www.elexonportal.co.uk/)
BMRS_API_KEY=

# Mailchimp Configuration (optional - for newsletter subscriptions)
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=
MAILCHIMP_SERVER=

# SendGrid Configuration (optional - for email notifications)
SENDGRID_API_KEY=

# Twilio Configuration (optional - for SMS alerts)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Session Configuration
# Secret key for session encryption (required for production)
SESSION_SECRET=your-secret-key-here

# Node Environment
NODE_ENV=development
